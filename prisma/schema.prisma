generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model user {
  id String @id @map("_id") @default(nanoid())
  email String @unique
  firstName String
  lastName String
  birthday DateTime
  role String
  companyName String
  phoneNumber String @unique
  password String
  pfp String
}
model otp {
  id String @id @map("_id") @default(nanoid())
  otp Int @unique
  email String
}