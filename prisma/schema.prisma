generator client {
  provider = "prisma-client-js"
}

// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}
model user {
  id String @id @default(nanoid())
  email String @unique
  firstName String
  lastName String
  birthday DateTime
  role String
  companyName String
  phoneNumber String @unique
  password String
  pfp String
  about String?
  skill skill[] 
  reviewer review[] @relation("reviewer_")
  reviewee review[] @relation("reviewee_")
  
}
model otp {
  id String @id @default(nanoid())
  otp Int @unique
  email String
}
model skill {
  id String @id @default(nanoid())  
  name String @unique
  user user[] 
}
model review {
  id String @id @default(nanoid())
  reviewer user @relation("reviewer_",fields: [reviewerId], references: [id])
  reviewerId String
  reviewee user @relation("reviewee_",fields: [revieweeId], references: [id])
  revieweeId String
}