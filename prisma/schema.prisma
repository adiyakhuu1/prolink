generator client {
  provider = "prisma-client-js"
}

// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}
model user {
  id String @id @default(nanoid())
  email String @unique
  firstName String
  lastName String
  birthday DateTime
  role String
  companyName String
  phoneNumber String @unique
  password String
  pfp String
  about String?
  skill skill[] 
  
}
model otp {
  id String @id @default(nanoid())
  otp Int @unique
  email String
}
model skill {
  id String @id @default(nanoid())  
  name String @unique
  user user[] 
}